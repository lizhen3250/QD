@model List<QD_Tour_Admin.Model.Golf>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="/vendors/jquery/dist/jquery.min.js"></script>
<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">高尔夫管理 <button type="button" class="btn btn-success" data-toggle="modal" data-target="#addModel" style="float:right">添加高尔夫信息</button></strong>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th style="display:none">Id</th>
                                    <th>城市</th>
                                    <th>地址</th>
                                    <th>名字</th>
                                    <th>设置价格</th>
                                    <th>编辑 / 删除</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var golf in Model)
                                    {
                                        <tr>
                                            <td style="display:none">@golf.Id</td>
                                            <td>@golf.City</td>
                                            <td>@golf.Address</td>
                                            <td>@golf.Name</td>
                                            <td><a href="/Golf/Details/@golf.Id" class="btn btn-primary">设置价格</a></td>
                                            <td>
                                                <button type="submit" class="btn btn-primary btn-default" data-target="#editModel" data-toggle="modal" onclick="getHotelById('@golf.Id')">编辑</button>
                                                <button type="submit" class="btn btn-danger btn-default" onclick="deleteHotel('@golf.Id')">删除</button>
                                            </td>
                                        </tr>
                                    }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div><!-- .animated -->
</div><!-- .content -->
