    function addTourPackageImage() {
        var p = $('#input-add-tour-photo')[0];
        var photoLabel = $('#input-add-tour-photo-label').find("option:selected").val();
        var photo = p.files[0];
        var photoName = $('#input-tour-photo-name').val();

