@model IEnumerable<QD_Tour_Admin.Controllers.CustomTourReservationModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="/vendors/jquery/dist/jquery.min.js"></script>
<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Data Table</strong>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th style="display:none">Id</th>
                                    <th>邮箱</th>
                                    <th>姓名</th>
                                    <th>联系电话</th>
                                    <th>发送时间</th>
                                    <th>信息</th>
                                    <th>总价</th>
                                    <th>是否付费</th>
                                    <th>编辑/删除</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var customTourReservation in Model)
                                {
                                <tr>
                                    <td style="display:none">@customTourReservation.CustomTourReservation.Id</td>
                                    <td>@customTourReservation.Member.Email</td>
                                    <td>@customTourReservation.Member.Name</td>
                                    <td>@customTourReservation.Member.Phone</td>
                                    <td>@customTourReservation.CustomTourReservation.MessageSentTime.ToString("yyyy-MM-dd")</td>
                                    <td>@customTourReservation.CustomTourReservation.Message</td>
                                    <td>@customTourReservation.CustomTourReservation.TotalPrice</td>
                                    @if (customTourReservation.CustomTourReservation.IsPaid == 0)
                                    {
                                        <td style="color:red;">否 </td>
                                    }
                                    else
                                    {
                                        <td>是 </td>
                                    }
                                    <td>
                                        <button type="submit" class="btn btn-primary btn-default" data-target="#editModel" data-toggle="modal" onclick="getGuideReservation('@customTourReservation.CustomTourReservation.Id')">编辑</button>
                                        <button type="submit" class="btn btn-danger btn-default" onclick="deleteGuideReservation('@customTourReservation.CustomTourReservation.Id', '@customTourReservation.Member.Id')">删除</button>
                                    </td>
                                </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div><!-- .animated -->
</div><!-- .content -->
