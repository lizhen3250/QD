                                    <td style="width:15%"><img src="@golfPackage.Photo" style="width:100%; height:100px" /></td>
                                    <td>@golfPackage.Golf.City</td>
                                    <td>@golfPackage.Golf.Name</td>
                                    <td>@golfPackage.Golf.Address</td>
